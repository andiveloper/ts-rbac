{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "rootDir": "src",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
